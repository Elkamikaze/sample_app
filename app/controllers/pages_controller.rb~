class PagesController < ApplicationController
  def home
  	@titre = "Accueil"
  	root_path => '/'
	root_url  => 'http://localhost:3000/'
  end

  def contact
  	@titre = "Contact"
  end

  def about
  	@titre = "A Propos"
  	about_path => '/about'
	about_url  => 'http://localhost:3000/about'
  end
  
  def help
  	@titre = "Aide"
  	help_path => '/help'
	help_url  => 'http://localhost:3000/help'
  end
end
